{
  "manifest_version": 3,
  "name": "ContentSpock",
  "version": "1.0",
  "description": "SidePanel AI Extension for Contentstack",
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open ContentSpock"
  },
  "permissions": ["sidePanel", "tabs", "activeTab", "scripting", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
